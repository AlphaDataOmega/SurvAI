{
  "name": "@survai/backend",
  "version": "1.0.0",
  "description": "SurvAI MVP Backend API",
  "main": "dist/server.js",
  "private": true,
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "type-check": "tsc --noEmit",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:deploy": "prisma migrate deploy",
    "db:studio": "prisma studio",
    "db:seed": "tsx src/scripts/seed.ts",
    "db:reset": "prisma migrate reset --force",
    "test": "echo \"Tests handled by root Jest config\" && exit 0",
    "test:watch": "echo \"Tests handled by root Jest config\" && exit 0"
  },
  "dependencies": {
    "@prisma/client": "^5.2.0",
    "@survai/shared": "file:../shared",
    "@types/cookie-parser": "^1.4.9",
    "bcryptjs": "^2.4.3",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^6.8.1",
    "helmet": "^7.0.0",
    "joi": "^17.9.2",
    "jsonwebtoken": "^9.0.1",
    "morgan": "^1.10.0",
    "ollama": "^0.5.16",
    "openai": "^5.8.3",
    "redis": "^4.6.7",
    "sanitize-html": "^2.17.0",
    "uuid": "^9.0.0",
    "winston": "^3.10.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.3",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/morgan": "^1.9.4",
    "@types/node": "^20.4.2",
    "@types/sanitize-html": "^2.16.0",
    "@types/supertest": "^2.0.12",
    "@types/uuid": "^9.0.2",
    "jest": "^29.6.1",
    "prisma": "^5.2.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "tsx": "^3.12.7",
    "typescript": "^5.1.6"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/src"
    ],
    "testMatch": [
      "**/__tests__/**/*.ts",
      "**/?(*.)+(spec|test).ts"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts",
      "!src/scripts/**"
    ]
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "survai",
    "backend",
    "api",
    "express",
    "typescript",
    "prisma"
  ],
  "author": "SurvAI Team",
  "license": "MIT"
}
