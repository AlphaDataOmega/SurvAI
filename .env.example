# ==============================================
# SurvAI MVP Environment Variables
# ==============================================
# Copy this file to .env and update with your actual values

# ==============================================
# Database Configuration
# ==============================================
# PostgreSQL connection string for development
DATABASE_URL="postgresql://survai_user:survai_password@localhost:5432/survai_dev?schema=public"

# ==============================================
# Redis Configuration
# ==============================================
# Redis connection string for caching
REDIS_URL="redis://localhost:6379"

# ==============================================
# Application Ports
# ==============================================
# Backend API server port
BACKEND_PORT=8000

# Frontend development server port
FRONTEND_PORT=3000

# ==============================================
# Node Environment
# ==============================================
# Environment mode (development, production, test)
NODE_ENV=development

# ==============================================
# AI Integration
# ==============================================
# OpenAI API configuration
# Get your API key from https://platform.openai.com/api-keys
# SECURITY: Never commit your actual API key to version control
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=1000

# Ollama API configuration (for local AI fallback)
# Install Ollama from https://ollama.com/download
# Start with: ollama serve
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama2

# ==============================================
# Authentication & Security
# ==============================================
# JWT secret for token signing
JWT_SECRET=your_jwt_secret_here_change_in_production

# Session secret for cookie signing
SESSION_SECRET=your_session_secret_here_change_in_production

# CORS allowed origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# ==============================================
# Logging & Monitoring
# ==============================================
# Log level (error, warn, info, debug)
LOG_LEVEL=info

# Enable debug mode
DEBUG=survai:*

# ==============================================
# External Services
# ==============================================
# Email service configuration (future)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# ==============================================
# Survey Configuration
# ==============================================
# Default survey settings
DEFAULT_SURVEY_TIMEOUT=30000
MAX_QUESTIONS_PER_SURVEY=50
DEFAULT_CLICK_TIMEOUT=5000

# ==============================================
# Affiliate Tracking
# ==============================================
# Click tracking configuration
CLICK_TRACKING_ENABLED=true
CONVERSION_TRACKING_ENABLED=true

# ==============================================
# Development Tools
# ==============================================
# Database management UI
PGWEB_PORT=8085

# Redis management UI
REDIS_COMMANDER_PORT=8081

# ==============================================
# Testing
# ==============================================
# Test database URL
TEST_DATABASE_URL="postgresql://survai_user:survai_password@localhost:5432/survai_test?schema=public"

# Test Redis URL
TEST_REDIS_URL="redis://localhost:6379/1"