{
  "name": "survai-mvp",
  "version": "1.0.0",
  "description": "SurvAI MVP - AI-enhanced survey engine with dynamic monetization optimization",
  "private": true,
  "workspaces": [
    "frontend",
    "backend",
    "shared"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev --workspace=backend\" \"npm run dev --workspace=frontend\"",
    "build": "npm run build --workspaces --if-present",
    "build:widget": "vite build --config vite.widget.config.ts",
    "build:widget:prod": "NODE_ENV=production vite build --config vite.widget.config.ts",
    "test": "jest",
    "test:coverage": "jest --coverage --coverageThreshold='{\"global\":{\"branches\":90,\"lines\":90,\"statements\":90,\"functions\":85}}'",
    "test:visual": "playwright test",
    "test:visual:update": "playwright test --update-snapshots",
    "test:visual:ui": "playwright test --ui",
    "test:visual:ci": "playwright test --reporter=github-actions",
    "test:all": "npm run lint && npm run type-check && npm run test && npm run test:visual",
    "test:ci": "npm run lint && npm run type-check && npm run test:coverage && npm run test:visual:ci",
    "lint": "eslint . --ext .ts,.tsx --fix",
    "lint:md": "markdownlint '**/*.md' --ignore node_modules --ignore '**/node_modules/**'",
    "test:links": "markdown-link-check **/*.md --ignore node_modules",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf node_modules frontend/node_modules backend/node_modules shared/node_modules",
    "clean:dist": "rm -rf frontend/dist backend/dist shared/dist"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "concurrently": "^8.2.0",
    "eslint": "^8.45.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-react-refresh": "^0.4.20",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.6.0",
    "jsdom": "^26.1.0",
    "markdown-link-check": "^3.11.2",
    "markdownlint-cli": "^0.37.0",
    "prettier": "^3.0.0",
    "terser": "^5.43.1",
    "ts-jest": "^29.1.0",
    "typescript": "^5.1.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yourusername/survai-mvp.git"
  },
  "keywords": [
    "survey",
    "ai",
    "typescript",
    "react",
    "express",
    "monorepo"
  ],
  "author": "SurvAI Team",
  "license": "MIT"
}
